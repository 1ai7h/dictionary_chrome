{
  "manifest_version": 3,
  "name": "Word Definition Lookup",
  "version": "1.0",
  "description": "Look up word definitions with a right-click",
  "permissions": ["contextMenus", "storage", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "dictionary-app-logo.svg",
      "32": "dictionary-app-logo.svg",
      "48": "dictionary-app-logo.svg",
      "128": "dictionary-app-logo.svg"
    }
  },
  "icons": {
    "16": "dictionary-app-logo.svg",
    "32": "dictionary-app-logo.svg",
    "48": "dictionary-app-logo.svg",
    "128": "dictionary-app-logo.svg"
  }
}